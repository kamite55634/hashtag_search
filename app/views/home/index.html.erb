<%@submissions.each do |submission|%>
<div class="box">
  <div>
  <%=submission.created_at.strftime("%Y-%m-%d %H:%M")%>
  </div>
  <div class="text">
  <%=submission.text%>
  </div>
  <div>
  <% if submission.hashtags_submissions %>
    <p>
      <% submission.hashtags_submissions.each do |group| %>
        #<%= group.hashtag.name%>
      <% end %>
    </p>
  <% end %>
  </div>
</div>
<%end%>